{
  "manifest_version": 3,
  "name": "Tab Auto Reloader",
  "short_name": "Tab Reloader",
  "description": "This extension reloads the current tab at a chosen interval.",
  "version": "2.0.0",
  "homepage_url": "https://github.com/billwheatley/crx-reload-tab",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Reload this page everyâ€¦"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "alarms"
  ]
}